<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <form class="product-form" action="/admin/<% if (edit) { %>edit-product<% } else {%>add-product<% } %>" method="POST">
                    <div class="form-control">
                        <label for="title">Title</label>
                        <input placeholder="Enter Title" type="text" name="title" id="title" value="<% if (edit) { %> <%= product.title %> <%}%>">
                    </div>
                    <div class="form-control">
                        <label for="imageUrl">Image Url</label>
                        <input placeholder="Enter Image Url" type="text" name="imageUrl" id="imageUrl" value="<% if (edit) { %> <%= product.imageUrl %> <%}%>">
                    </div>
                    <div class="form-control">
                        <label for="price">Price</label>
                        <input placeholder="Enter Price" type="number" step="0.01" name="price" id="price" value="<% if (edit && product.price) { %><%= parseFloat(product.price) || 0 %><% } else { %>0<% } %>">
                    </div>
                    <div class="form-control">
                        <label for="description">Description</label>
                        <textarea placeholder="Enter Description" name="description" id="description" rows="5"><% if (edit) { %><%= product.description %><% } %></textarea>
                    </div>                    
                    <%if (edit) { %> <input type="hidden" value="<%=product.id%>" name="productId"> <% } %>
                    <button class="btn" type="submit"><%if (edit) { %> Update Product <% }else { %> Add Product <% }%> </button>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>